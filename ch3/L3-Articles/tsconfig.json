{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "app.h",
    "jsxFragmentFactory": "app.Fragment",
    "lib": ["dom", "es2015", "es5"],
    "experimentalDecorators": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["src"]
}